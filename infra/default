server {
    server_name taskihomework.zapto.org;

    location /api/ {
        proxy_pass http://127.0.0.1:5000;
    }

    location /admin/ {
        proxy_pass http://127.0.0.1:5000;
    }

    location / {
        root   /var/www/taski;
        index  index.html index.htm;
        try_files $uri /index.html;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/taskihomework.zapto.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/taskihomework.zapto.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    server_name kittygramhomework.zapto.org;

    location /api/ {
        proxy_pass http://127.0.0.1:8000;
    }
 
    location /admin/ {
        proxy_pass http://127.0.0.1:8000;
    }

    location / {
        root   /var/www/infra_sprint1;
        index  index.html index.htm;
        try_files $uri /index.html;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/kittygramhomework.zapto.org-0001/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/kittygramhomework.zapto.org-0001/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}


server {
    if ($host = kittygramhomework.zapto.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



    listen 80;
    server_name kittygramhomework.zapto.org;
    return 404; # managed by Certbot
}

server {
    if ($host = taskihomework.zapto.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name taskihomework.zapto.org;
    return 404; # managed by Certbot


}
